    <script>
        function submitQuiz() {
    var questions = document.querySelectorAll('.question');
    var score = 0;
    var answers = [];

    questions.forEach(function(question, index) {
        var selectedOption = question.querySelector('input[type="radio"]:checked');
        if (selectedOption) {
            var userAnswer = selectedOption.value;
            answers.push(userAnswer);
            var correctAnswer = question.querySelector('input[type="radio"][value="a"]').checked;
            if (userAnswer === "a" && correctAnswer) {
                score++;
            }
        }
    });

    var resultsContainer = document.getElementById('results');
    var scoreDisplay = document.getElementById('score');
    var answersDisplay = document.getElementById('answers');

    scoreDisplay.innerHTML = 'Your score: ' + score + ' out of ' + questions.length;
    answersDisplay.innerHTML = 'Correct answers:<br>';
    questions.forEach(function(question, index) {
        var correctOption = question.querySelector('input[type="radio"][value="a"]');
        if (correctOption) {
            answersDisplay.innerHTML += (index + 1) + '. ' + correctOption.parentNode.textContent + '<br>';
        }
    });

    resultsContainer.style.display = 'block';
}
    </script>
